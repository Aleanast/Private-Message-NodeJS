{#
/**
 * Template for a notification message.
 */
#}
<a class="pmmn-notification" href="{{ url }}">

    {% if image %}
        <div class="pmmn-notification__image">
            <img src="{{ image }}" />
        </div>
    {% endif %}

    <strong class="pmmn-notification__title">
        {{ title }}
    </strong>

    <div class="pmmn-notification__body">
        {{ snippet }}
    </div>

</a>
